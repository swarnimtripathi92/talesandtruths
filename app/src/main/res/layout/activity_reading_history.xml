<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F6FF"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_history_insights"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“š Reading History"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Track progress, streaks and story power"
            android:textColor="#E4EBFF"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSessionsCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_history_chip"
                android:gravity="center"
                android:padding="10dp"
                android:text="0 Sessions"
                android:textColor="#27358F"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMinutesCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_history_chip"
                android:gravity="center"
                android:padding="10dp"
                android:text="0 Min"
                android:textColor="#27358F"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWordsCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_history_chip"
                android:gravity="center"
                android:padding="10dp"
                android:text="0 Words"
                android:textColor="#27358F"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvStreakSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_history_chip"
            android:padding="10dp"
            android:text="ðŸ”¥ Streak: 0 day | ðŸ“… This Week: 0 sessions"
            android:textColor="#23358B"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvEmptyHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_empty_state"
        android:gravity="center"
        android:padding="18dp"
        android:text="No stories read yet ðŸ“š"
        android:textColor="#4B5388"
        android:textSize="16sp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />

</LinearLayout>
