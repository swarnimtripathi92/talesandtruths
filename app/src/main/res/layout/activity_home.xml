<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸŒˆ HEADER IMAGE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            app:strokeColor="#1AFFFFFF"
            app:strokeWidth="1dp">

            <!-- Background Image -->
            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/header_kids_story" />

            <!-- Gradient Overlay -->
            <View
                android:id="@+id/headerOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/header_gradient_overlay"/>

            <!-- Top Badge -->
            <TextView
                android:id="@+id/tvHeaderBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_header_chip"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:text="âœ¨ New stories daily"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Branding Text -->
            <LinearLayout
                android:id="@+id/headerTextContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KidVerse ðŸŒˆ"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/tvTagline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stories that teach kindness and courage"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvHeaderCta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_header_chip"
                    android:paddingStart="14dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="7dp"
                    android:text="Start reading â†’"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFeatured"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="18dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFF8E1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- ðŸ“· Featured Cover -->
                <ImageView
                    android:id="@+id/ivFeaturedCover"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header_kids_story" />

                <!-- ðŸ“ Text Side -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvFeaturedTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todayâ€™s Featured Story"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#E65100"/>

                    <TextView
                        android:id="@+id/tvFeaturedSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to explore something special!"
                        android:textSize="14sp"
                        android:textColor="#BF360C"
                        android:layout_marginTop="6dp"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardKeepReading"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="28dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#7C8CFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- ðŸ“– Icon -->
                <ImageView
                    android:id="@+id/ivContinueIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder_book"
                    android:layout_marginEnd="14dp" />


                <!-- ðŸ“š Text Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvContinueTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue Reading ðŸ“–"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/tvLastStory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"/>


                    <TextView
                        android:id="@+id/tvReadingStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ 3 stories this week"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp"/>

                    <!-- ðŸ“Š Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressReading"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progress="60"
                        android:progressTint="@android:color/white"
                        android:progressBackgroundTint="#B0B8FF"/>
                </LinearLayout>

                <!-- ðŸ‘‰ Arrow -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âž¡"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- ðŸ§© SECTION TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore Stories"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="14dp" />

        <!-- ðŸ¯ MORAL STORIES -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMoral"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="14dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E8EDFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/moral_story_image"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moral Stories"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2E3A8C"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn right from wrong"
                        android:textSize="14sp"
                        android:textColor="#3F4DB8"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸŒ™ BEDTIME STORIES -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBedtime"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="14dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFF1CC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bedtime_story_image"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bedtime Stories"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#8A4B00"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep with sweet dreams"
                        android:textSize="14sp"
                        android:textColor="#B86B00"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ§  KIDS INFOTAINMENT -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardKidsInfotainment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E3F6EA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kids_gk_image"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kids Infotainment"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1B5E20"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily News â€¢ Facts â€¢ Magazines"
                        android:textSize="14sp"
                        android:textColor="#2E7D32"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ‘‘ PREMIUM BANNER -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPremiumBanner"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="22dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#6A8DFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ‘‘ Unlock 100+ Stories and Daily GK"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”’ PARENT ZONE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnParentZone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="22dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#374151">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ”’ Parent Zone (Adults Only)"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
