<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸŒˆ HEADER IMAGE -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_header_round"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/header_kids_story" />
        </FrameLayout>

        <!-- ðŸ·ï¸ APP TITLE CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#EEF2FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tales and Truths ðŸŒˆ"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#2E3A8C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stories that teach kindness and courage"
                    android:textSize="15sp"
                    android:letterSpacing="0.03"
                    android:textColor="#4254D4"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ“– START READING -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStartReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:clickable="true"
            android:foreground="@drawable/card_clickable_bg"
            app:cardCornerRadius="34dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#5B6CFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“– Letâ€™s Read a Story!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="0.04"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="26dp" />
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ§© SECTION TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore Stories"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="14dp" />

        <!-- ðŸ¯ MORAL STORIES -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMoral"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="14dp"
            android:clickable="true"
            android:foreground="@drawable/card_clickable_bg"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E8EDFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/moral_story_image" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moral Stories"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.03"
                        android:textColor="#2E3A8C" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn right from wrong"
                        android:textSize="14sp"
                        android:textColor="#3F4DB8"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸŒ™ BEDTIME STORIES -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBedtime"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="14dp"
            android:clickable="true"
            android:foreground="@drawable/card_clickable_bg"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFF1CC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bedtime_story_image" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bedtime Stories"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.03"
                        android:textColor="#8A4B00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep with sweet dreams"
                        android:textSize="14sp"
                        android:textColor="#B86B00"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ§  KIDS INFOTAINMENT -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardKidsInfotainment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="28dp"
            android:clickable="true"
            android:foreground="@drawable/card_clickable_bg"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E3F6EA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kids_gk_image" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kids Infotainment"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.03"
                        android:textColor="#1B5E20" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Knowledge and Games"
                        android:textSize="14sp"
                        android:textColor="#2E7D32"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”’ PARENT ZONE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnParentZone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:foreground="@drawable/card_clickable_bg"
            app:cardCornerRadius="22dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#374151">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ”’ Parent Zone (Adults Only)"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
