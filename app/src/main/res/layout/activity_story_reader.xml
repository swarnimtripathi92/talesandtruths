<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <!-- ðŸ” SAFE Reader Top Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/readerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:paddingTop="24dp"
        app:contentInsetStart="16dp"
        app:contentInsetEnd="8dp"
        app:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Story Title -->
            <TextView
                android:id="@+id/tvStoryTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Story Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <!-- A- -->
            <ImageButton
                android:id="@+id/btnAMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_text_minus"
                android:clickable="true"
                android:focusable="true"
                app:tint="?attr/colorOnSurface" />

            <!-- A+ -->
            <ImageButton
                android:id="@+id/btnAPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_text_plus"
                android:clickable="true"
                android:focusable="true"
                app:tint="?attr/colorOnSurface" />

            <!-- Night Mode -->
            <ImageButton
                android:id="@+id/btnNightMode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_night"
                android:clickable="true"
                android:focusable="true"
                app:tint="?attr/colorOnSurface" />
            <ImageButton
                android:id="@+id/btnFont"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_font"
                app:tint="?attr/colorOnSurface" />

        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutline" />

    <!-- ðŸ“– Story Content -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false"
        android:overScrollMode="never" />

</LinearLayout>
