<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/badgeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_badge_card"
    android:elevation="2dp"
    android:gravity="center"
    android:minHeight="150dp"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/tvBadgeIcon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/bg_badge_icon"
        android:gravity="center"
        android:text="ðŸ†"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tvBadgeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="First Story"
        android:textColor="#2B2B47"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBadgeSpark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="âœ¨ Achievement unlocked"
        android:textColor="#6B68A0"
        android:textSize="12sp" />

</LinearLayout>
