<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F6FF">

    <!-- ðŸŒ™ BEDTIME STORIES HEADER -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        android:background="@drawable/bg_bedtime_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="18dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ™ Bedtime Stories"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2B2E6B"/>

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gentle stories for a peaceful sleep"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4A4FA3"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ“š STORY LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerStories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:clipToPadding="false"/>

</LinearLayout>
