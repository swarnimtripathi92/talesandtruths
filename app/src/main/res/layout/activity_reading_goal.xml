<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_reading_goal_screen"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#CCFFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:strokeColor="#1FFFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š Daily Reading Adventure"
                    android:textColor="#1E2452"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="A cheerful goal tracker for kids, and crystal-clear progress for parents."
                    android:textColor="#4D556D"
                    android:textSize="14sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFFFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Set todayâ€™s goal"
                    android:textColor="#222222"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etGoalMinutes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_reading_goal_input"
                    android:ems="10"
                    android:hint="Minutes (5 - 180)"
                    android:inputType="number"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="12dp"
                    android:textColor="#212121"
                    android:textColorHint="#9096A8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnQuick10"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:backgroundTint="#DDE3FF"
                        android:text="10m"
                        android:textAllCaps="false"
                        android:textColor="#3042A6" />

                    <Button
                        android:id="@+id/btnQuick20"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:backgroundTint="#DDE3FF"
                        android:text="20m"
                        android:textAllCaps="false"
                        android:textColor="#3042A6" />

                    <Button
                        android:id="@+id/btnQuick30"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:backgroundTint="#DDE3FF"
                        android:text="30m"
                        android:textAllCaps="false"
                        android:textColor="#3042A6" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSaveGoal"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="14dp"
                    android:backgroundTint="#5468FF"
                    android:text="Save Goal"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ Todayâ€™s progress"
                    android:textColor="#222222"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0%"
                    android:textColor="#3D4DE0"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="0 / 20 min"
                    android:textColor="#596072"
                    android:textSize="15sp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="14dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/bg_reading_goal_progress" />

                <TextView
                    android:id="@+id/tvRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="0 minutes remaining"
                    android:textColor="#596072"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Set a goal to start your adventure!"
                    android:textColor="#1E2452"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_reading_goal_input"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="ðŸ”¥ Streak: 0 days"
                    android:textColor="#30354D"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
