<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F8FF">

    <!-- ðŸ¯ MORAL STORIES HEADER -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        android:background="@drawable/bg_moral_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="18dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¯ Moral Stories"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2E3A8C"/>

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stories that teach right from wrong"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#3F4DB8"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ“š STORY LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerStories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:clipToPadding="false"/>

</LinearLayout>
